general {
    colors = true
    color_good = "#049cfb"
    color_bad = "#cc3366"
    color_degraded = "#999999"
    interval = 3
}

order += "wireless _first_"
order += "ethernet _first_"
order += "path_exists VPN"
order += "volume master"
order += "disk /"
order += "battery 0"
order += "load"
order += "tztime date"
#order += "tztime est"
order += "tztime local"

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery 0 {
    format = " %status %percentage %remaining "
    hide_seconds = true
    low_threshold = 15
    threshold_type = "percentage"
    status_bat = ðŸ”‹
    status_chr = âš¡
    status_full = â™¥
    integer_battery_capacity = true
}


run_watch DHCP {
    pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
    pidfile = "/var/run/vpnc/pid"
}

tztime date {
        format = "%Y-%m-%d"
}

tztime local {
        format = "%H:%M:%S"
}

tztime est {
        timezone = "US/Eastern"
        format = "EST: %H:%M"
}

path_exists VPN {
    # path exists when a VPN tunnel launched by nmcli/nm-applet is active
    path = "/proc/sys/net/ipv4/conf/tun0"
    # format = "vpn %status"
    format = " vpn "
}

load {
    format = " %1min "
}

disk "/" {
    format = " %avail "
}

volume master {
    format = " â™ª %volume "
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}
